<!-- ReSharper disable MarkupAttributeTypo -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTest.MainWindow"
        Title="Avalonia">
  <Window.Styles>
      <Style Selector="Border">
          <Setter Property="Background" Value="LightGray"></Setter>
          <Setter Property="BorderBrush" Value="Black"></Setter>
          <Setter Property="BorderThickness" Value="1"></Setter>
          <Setter Property="Margin" Value="3"></Setter>
          <Setter Property="CornerRadius" Value="5"></Setter>
          <Setter Property="Padding" Value="5"></Setter>
      </Style>
  </Window.Styles>
  <Border Padding="10">
    <Grid Margin="5" RowDefinitions="10*,75*">
      <Border Background="Wheat">
        <Grid ColumnDefinitions="92*,8*">
          <TextBox Name="PlaylistUrl" FontSize="14" TextWrapping="Wrap" Height="16" Padding="0" Watermark="Playlist url" GotFocus="PlaylistUrl_OnGotFocus"></TextBox>
          <Button Name="ParseButton" Content="Start" BorderThickness="1" BorderBrush="Black" Grid.Column="1" Margin="5,0,0,0" Click="ParseButton_OnClick" IsEnabled="False"></Button>
        </Grid>
      </Border>
      <Border Grid.Row = "1" Background= "White" Name="PlayListBioContainer">
            <Border.Styles>
                <Style Selector="TextBlock.Content">
                    <Setter Property="Grid.Column" Value="1"></Setter>
                </Style>
                <Style Selector="TextBlock.Title">
                    <Setter Property="FontWeight" Value="DemiBold"></Setter>
                </Style>
            </Border.Styles>
          
            <Grid ColumnDefinitions="30*,70*" Name="PlaylistInfo">
          <Grid Name="PlaylistBio" RowDefinitions="60*,40*">
            <Image Name="PlaylistImage" Stretch="Uniform" Margin="0,0,0,20"/>
            <Grid Grid.Row="1">
              <Grid Name="PlaylistBioTextPart" RowDefinitions="1*,1*,1*,1*">
                  <Grid.Styles>
                      <Style Selector="TextBlock">
                          <Setter Property="FontSize" Value="16"/>
                          <Setter Property="Margin" Value="5,0,0,0"></Setter>
                      </Style>
                      <Style Selector="TextBlock.Title">
                          <Setter Property="Margin" Value="20,0,0,0"></Setter>
                      </Style>
                  </Grid.Styles>
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                    <TextBlock Text="Title : " Classes="Title"/>
                    <TextBlock Name="PlaylistName" TextWrapping="Wrap" Classes="Content"/>
                </Grid>
                <Grid Grid.Row="1" ColumnDefinitions="Auto,* ">
                    <TextBlock Text="Release date : " Classes="Title"/>
                    <TextBlock Name="PlaylistReleaseDate" Classes="Content"/>
                </Grid>
                <Grid Grid.Row="2" ColumnDefinitions="Auto,*">
                    <TextBlock Text="Genre : " Classes="Title"/>
                    <TextBlock Name="PlaylistGenre" Classes="Content"/>
                </Grid>
                <Grid Grid.Row="3" ColumnDefinitions="Auto,*">
                    <TextBlock Text="Label : " Classes="Title"/>
                    <TextBlock Name="PlaylistRecordLabel" Classes="Content"/>
                </Grid>
              </Grid>
            </Grid>
          </Grid>
          <Grid Grid.Column="1" RowDefinitions="Auto,*">
              <TextBlock FontSize="16" FontWeight="Bold" Text="Tracks" Margin="5, 5,0, 0"></TextBlock>
              <ListBox Grid.Row="1" Name="TrackList">
                  <ListBox.ItemTemplate>
                      <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                                <Grid.Styles>
                                    <Style Selector="TextBlock">
                                        <Setter Property="FontSize" Value="14"></Setter>
                                        <!-- For variant №1-->
                                        <!--<Setter Property="Margin" Value="5,5,0,0"></Setter>-->

                                        <!-- For variant №2-->
                                        <Setter Property="Margin" Value="5,5,35,0"></Setter>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </Grid.Styles>
                              <!--Variant 1-->
                              <!--<Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                  <TextBlock Text="Title : " Classes="Title"/>
                                  <TextBlock Text="{Binding SongName}" Classes="Content"/>
                              </Grid>
                                <Grid Grid.Row="1"  ColumnDefinitions="Auto,*">
                                    <TextBlock Text="Artist : " Classes="Title"/>
                                    <TextBlock Text="{Binding ArtistName}" Classes="Content"/>
                                </Grid>
                                <Grid Grid.Row="2"  ColumnDefinitions="Auto,*">
                                    <TextBlock Text="Album : " Classes="Title"/>
                                    <TextBlock Text="{Binding AlbumName}" Classes="Content"/>
                                </Grid>
                                <Grid Grid.Row="3"  ColumnDefinitions="Auto,*" IsVisible="{Binding Duration, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                    <TextBlock Text="Duration : " Classes="Title"/>
                                    <TextBlock Text="{Binding Duration}" Classes="Content"/>
                                </Grid>
                                <Grid Grid.Row="4" ColumnDefinitions="Auto,*" IsVisible="{Binding Genre, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                    <TextBlock Text="Genre : " Classes="Title"/>
                                    <TextBlock Text="{Binding Genre}" Classes="Content"/>
                                </Grid>-->
                              <!--Variant 2 (But without headers due to dynamic width of content)-->
                              <TextBlock Grid.Column="0" Text="{Binding SongName}"/>
                              <TextBlock Grid.Column="1" Text="{Binding ArtistName}"/>
                              <TextBlock Grid.Column="2" Text="{Binding AlbumName}"/>
                              <TextBlock Grid.Column="3" Text="{Binding Duration}" IsVisible="{Binding Duration, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                              <TextBlock Grid.Column="4" Text="{Binding Genre}" IsVisible="{Binding Genre, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
          </Grid>
        </Grid>
      </Border>
    </Grid>
  </Border>
</Window>
